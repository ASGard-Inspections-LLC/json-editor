{
  "name": "@json-editor/json-editor",
  "title": "JSONEditor",
  "description": "JSON Schema based editor",
  "version": "1.4.0-beta.0",
  "main": "dist/jsoneditor.js",
  "author": {
    "name": "Jeremy Dorn",
    "email": "jeremy@jeremydorn.com",
    "url": "http://jeremydorn.com"
  },
  "bugs": {
    "url": "https://github.com/json-editor/json-editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/json-editor/json-editor.git"
  },
  "keywords": [
    "json",
    "schema",
    "jsonschema",
    "editor"
  ],
  "scripts": {
    "prepare": "grunt",
    "build.grunt": "npm install && grunt",
    "build": "webpack",
    "start": "grunt watch",
    "test": "grunt test",
    "test.unit": "jasmine --config=jasmine.json",
    "karma": "karma start karma.conf.js --log-level debug",
    "karma.headless":  "ng test --single-run=true --browsers=PhantomJS --reporters=progress",
    "serve-test": "grunt serve-test",
    "docker-test": "cd tests && docker-compose run --rm node npm run build && docker-compose up -d && docker-compose ps && docker-compose run --rm codeceptjs codeceptjs run-multiple basic --grep '(?=.*)^(?!.*@optional)'",
    "preversion": "npm run docker-test",
    "version": "grunt string-replace",
    "prepublishOnly": "grunt string-replace",
    "postversion": "git push && git push --tags && npm publish ./ --access public"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "ace-builds": "^1.4.5",
    "babel": "^6.23.0",
    "grunt": "^1.0.4",
    "grunt-contrib-concat": "~1.0.0",
    "grunt-contrib-connect": "~2.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-jshint": "~1.0.0",
    "grunt-contrib-uglify": "~1.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-run": "^0.8.1",
    "grunt-string-replace": "^1.3.1",
    "jasmine": "^3.4.0",
    "jasmine-core": "^3.4.0",
    "jquery": "^3.4.1",
    "karma": "^4.2.0",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "requirejs": "^2.3.6",
    "sceditor": "^2.1.3",
    "standard": "^11.0.1",
    "watchify": "^3.11.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {}
}
